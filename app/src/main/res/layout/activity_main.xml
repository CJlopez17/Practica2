<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU PRINCIPAL"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@id/FormBt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/FormBt"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#004270"
        android:text="FORMULARIO"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <Button
        android:id="@+id/ImgBt"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#004270"
        android:text="IMAGEN"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FormBt" />

    <Button
        android:id="@+id/RowsBt"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#004270"
        android:text="ROWS"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ImgBt" />

    <Button
        android:id="@+id/gpsBt"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#004270"
        android:text="GPS"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RowsBt" />

    <Button
        android:id="@+id/podoBt"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#004270"
        android:text="PODOMETRO"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gpsBt" />

    <Button
        android:id="@+id/cameraBt1"
        android:layout_width="320sp"
        android:layout_height="55sp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#004270"
        android:text="Camara"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/podoBt" />

    <Button
        android:id="@+id/loginBt"
        android:layout_width="320sp"
        android:layout_height="55sp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#004270"
        android:text="Login de usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cameraBt1" />

    <Button
        android:id="@+id/registerBt"
        android:layout_width="320sp"
        android:layout_height="55sp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#004270"
        android:text="Registro de usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/loginBt" />

</androidx.constraintlayout.widget.ConstraintLayout>